{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <img src="public/assets/camera.png"
                 class="img-fluid rounded" alt="Product">
        </div>

        <div class="col-md-6">
            <h1 class="mb-3">Camera</h1>
            <p class="text-muted fs-4 mb-3">$129.99</p>

            <p class="mb-4">
                Experience superior image quality.
                Try our latest Camera with advanced features
                designed for both professionals and enthusiasts.
            </p>

            <ul class="list-unstyled mb-4">
                <li><strong>Brand:</strong> AudioTech</li>
                <li><strong>Color:</strong> Matte Black</li>
                <li><strong>Connectivity:</strong> Bluetooth 5.0</li>
                <li><strong>Battery Life:</strong> 30 hours</li>
            </ul>

            {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.quantity) }}
                    {{ form_widget(form.quantity, { attr: { class: 'form-control' } }) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.color) }}
                    {{ form_widget(form.color, { attr: { class: 'form-select' } }) }}
                </div>

                <button type="submit" class="btn btn-primary btn-lg">
                    Add to Cart
                </button>

            {{ form_end(form) }}


        </div>
    </div>
</div>
{% endblock %}